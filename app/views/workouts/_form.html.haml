= form_with model: @workout, local: true do |f|
  = f.hidden_field :training_template_id, value: @workout.training_template_id
  = if @workout.errors.any?
    %div{:id => "error_explanation"}
      %h2
        = pluralize(@workout.errors.count, "error")
        prohibited this workout from being saved:
      %ul
        - @workout.errors.full_messages.each do |msg|
          %li
            = msg

  %p
    = f.label :name
    %br
    = f.text_field :name
  %p
    = f.label :day_number
    %br
    = f.number_field :day_number

  %p
    = f.submit
